<% layout("layouts/boilerplate") %>

<div class=" mt-3">
    <h1 class="col-6 offset-3">Login</h1><br>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required> <!-- Change this from `type="password"` to `type="text"` -->
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn" style="background-color: green; ">Login</button>
        </form>
    </div>
</div>
